# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{tf,tfvars}]
indent_style = tab
indent_size = 2
tab_width = 2

[*.py]
indent_style = space
indent_size = 4

[*.{yaml,json}]
indent_style = space
indent_size = 2
